<% if (title) { %>
    <% } else { res.redirect('/') } %>
        <% messages() %>
            <%- detailHTML %>
                <% if (locals.loggedin) { %>
                    <div class="review-columns">
                        <div>
                            <h4>Leave a Review</h4>
                            <form id="reviewForm" action="/inv/detail/<%- invId %>" method="POST" class="review-form">
                                <label for="review_text">
                                    Review Text:
                                    <textarea required name="review_text" id="review_text"></textarea>
                                </label>
                                <label for="review_rating">
                                    Rating Out of 5:
                                    <select required name="review_rating" id="review_rating">
                                        <option value="">Select One</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </label>
                                <label for="name">
                                    Screen Name:
                                    <input type="text" name="name" id="name" readonly
                                        value="<%= `${locals.accountData.account_firstname[0]}${locals.accountData.account_lastname}` %>">
                                </label>
                                <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>">
                                <input type="hidden" name="inv_id" value="<%- invId %>">
                                <button type="submit">Submit Review</button>
                            </form>
                        </div>
                        <div>
                            <h4>Reviews</h4>
                            <div>
                                <%- reviewsList %>
                            </div>
                        </div>
                    </div>
                    <% } else { %>
                        <div>
                            <%- reviewsList %>
                                <div><i><a href="/account/login">Log in</a> to write a review.</i></div>
                        </div>
                        <% } %>