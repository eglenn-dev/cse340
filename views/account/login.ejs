<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
        <%- messages() %>
            <div class="login-area">
                <div class="border-box">
                    <form id="loginForm" class="login-form" action="/account/login" method="POST">
                        <div class="form-group">
                            <label for="account_email">Email:</label>
                            <input type="email" id="account_email" name="account_email" required>
                        </div>
                        <div class="form-group">
                            <label for="account_password">Password:</label>
                            <input type="password" id="account_password" name="account_password" required>
                        </div>
                        <button class="submit-button" type="submit">Log In</button>
                    </form>
                    <p style="color: black; text-align: center;">Don't have an account? <a
                            href="/account/register">Register
                            here</a>.</p>
                </div>
            </div>