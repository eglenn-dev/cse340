<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
        <%- messages() %>

            <div class="update-area">
                <div class="form-container">
                    <form id="accountUpdateForm" action="/account/update" method="POST">
                        <fieldset>
                            <legend>Account Update</legend>
                            <div class="form-group">
                                <label for="first_name">First Name:</label>
                                <input type="text" id="first_name" name="first_name" required>
                            </div>
                            <div class="form-group">
                                <label for="last_name">Last Name:</label>
                                <input type="text" id="last_name" name="last_name" required>
                            </div>
                            <div class="form-group">
                                <label for="email">Email Address:</label>
                                <input type="email" id="email" name="email" required>
                            </div>
                            <button class="submit-button" type="submit">Update Account</button>
                        </fieldset>
                        <input type="hidden" name="account_id" value="<%= locals.account_id %>">
                    </form>
                </div>

                <div class="form-container">
                    <form id="passwordChangeForm" action="/account/change-password" method="POST">
                        <fieldset>
                            <legend>Change Password</legend>
                            <div class="form-group">
                                <label for="current_password">Current Password:</label>
                                <input type="password" id="current_password" name="current_password" required>
                            </div>
                            <div class="form-group">
                                <label for="new_password">New Password:</label>
                                <input type="password" id="new_password" name="new_password" required>
                            </div>
                            <div class="form-group">
                                <label for="confirm_password">Confirm New Password:</label>
                                <input type="password" id="confirm_password" name="confirm_password" required>
                            </div>
                            <button class="submit-button" type="submit">Change Password</button>
                        </fieldset>
                        <input type="hidden" name="account_id" value="<%= locals.account_id %>">
                    </form>
                </div>
            </div>