<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
        <%- messages() %>

            <div class="update-area">
                <div class="form-container">
                    <form id="accountUpdateForm" action="/account/update" method="POST">
                        <fieldset>
                            <legend>Account Update</legend>
                            <div class="form-group">
                                <label for="account_firstname">First Name:</label>
                                <input type="text" id="account_firstname" name="account_firstname"
                                    value="<%= locals.accountData.account_firstname %>" required>
                            </div>
                            <div class="form-group">
                                <label for="account_lastname">Last Name:</label>
                                <input type="text" id="account_lastname" name="account_lastname"
                                    value="<%= locals.accountData.account_lastname %>" required>
                            </div>
                            <div class="form-group">
                                <label for="account_email">Email Address:</label>
                                <input type="email" id="account_email" name="account_email"
                                    value="<%= locals.accountData.account_email %>" required>
                            </div>
                            <button class="submit-button" type="submit" form="accountUpdateForm">Update Account</button>
                        </fieldset>
                        <input type="hidden" id="account_id" name="account_id"
                            value="<%= locals.accountData.account_id %>">
                    </form>
                </div>
                <div class="form-container">
                    <form id="passwordChangeForm" action="/account/password" method="POST">
                        <fieldset>
                            <legend>Change Password</legend>
                            <div class="form-group">
                                <label for="current_password">Current Password:</label>
                                <input type="password" id="current_password" name="current_password" required>
                            </div>
                            <div class="form-group">
                                <label for="new_password">New Password:</label>
                                <input type="password" id="new_password" name="new_password" required>
                            </div>
                            <div class="form-group">
                                <label for="confirm_password">Confirm New Password:</label>
                                <input type="password" id="confirm_password" name="confirm_password" required>
                            </div>
                            <button class="submit-button" type="submit">Change Password</button>
                        </fieldset>
                        <input type="hidden" id="account_id" name="account_id"
                            value="<%= locals.accountData.account_id %>">
                    </form>
                </div>
            </div>